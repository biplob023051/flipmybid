body {font-family: 'PTSansRegular', Arial, Helvetica, sans-serif;font-size:16px;}
h1, h2, h3, h4, h5, h6 {font-family: 'BebasNeueRegular', Arial, sans-serif;
	letter-spacing: 0;
	margin: 0;
	text-transform: capitalize;
	font-weight: normal;
	font-style: normal;
	color: #444444;
	text-shadow: #fff 1px 1px 1px;
}
h2 {font-size:24px;}
a, a:visited, a:hover, a:active {color: #444;}
/*@media (min-width: 768px) {body {background-color:yellow;}}
@media (min-width: 992px) {body {background-color:blue;}}
@media (min-width: 1200px) {body {background-color:green;}}
@media screen and (max-width: 767px) {body {background-color:#fff;}}*/

.container-fluid {padding:0;margin:0;}
.container {padding:0;}
.row {padding:30px 0;margin:0;}
.flip {color: #444;}
.my {color: #08afd8;}
.bid {color: #bf2f29;}
.navbar-default {margin:0;background-color:#eaeaea;}
.navbar-brand a {font-family: 'BebasNeueRegular', Arial, sans-serif;text-shadow: #fff 1px 1px 1px;font-size: 50px;text-decoration:none;}
.auctions .nav {font-family: 'PTSansRegular', Arial, Helvetica, sans-serif;background: #eaeaea;}
.auctions .content {padding:20px 25px 0; background-color:#fff;}


.copyright {text-align:center;}

@media (min-width: 1200px){
	.container {width: 960px;padding:0;}
	.ea {background-color:#eaeaea;}
	.cc {background-color:#cccccc;}
	.auctions {padding:25px;}	
}

@media screen and (max-width: 767px) {
	.row {padding:0;}
	.navbar {border:none;background-color:#fff;}
	.navbar-toggle {float:left;margin:0;padding:15px;border:none;border-radius:0;width:auto;z-index:20;}
	.navbar-brand {padding: 15px;position:absolute;left:0;width:100%;text-align:center;}
	.navbar-nav {margin:0 -15px;}
	.navbar-default .navbar-toggle, .navbar-default .navbar-toggle:focus, .navbar-default .navbar-toggle:hover, .navbar-default .navbar-collapse, .navbar-default .navbar-form, .navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover, .navbar-default .navbar-nav>li>a, .navbar-default .navbar-nav>.open>a, .navbar-default .navbar-nav>.open>a:focus, .navbar-default .navbar-nav>.open>a:hover, .navbar-default .navbar-nav .open .dropdown-menu>li>a, .navbar-default .navbar-nav>li>a:focus, .navbar-default .navbar-nav>li>a:hover {color:#fff; background-color:#08afd8;border-color:#08afd8;}
	.navbar-default .navbar-toggle .icon-bar {background-color:#fff;width: 25px;height: 3px;}
	.dropdown-menu .divider {background-color:#fff;}
	.userform {display:none;}
	.auctions {padding:0;}
	.copyright {background-color:#ccc;}
	.nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover {background-color:#ccc;}
}

@font-face {
    font-family: 'BebasNeueRegular';
    src: url('../fonts/BebasNeue-webfont.eot');
    src: url('../fonts/BebasNeue-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/BebasNeue-webfont.woff') format('woff'),
         url('../fonts/BebasNeue-webfont.ttf') format('truetype'),
         url('../fonts/BebasNeue-webfont.svg#BebasNeueRegular') format('svg');
    font-weight: normal;
    font-style: normal;
}

